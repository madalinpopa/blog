---
const { text, href } = Astro.props;
---
<!-- bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium" : "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white -->
<div
  class="my-6"
>
  <a class="rounded-md px-3 py-4 text-sm font-medium transition-colors ease-in-out duration-300 text-gray-300 hover:bg-gray-700 hover:text-white" href={href}>
    <span class="inline-flex gap-2 border-b"
      >{text}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
      </svg>
    </span>
  </a>
</div>
